{
  "name": "@wraith/ghost",
  "version": "0.1.0",
  "description": "Ghost Design System - A dark-themed UI component library for React Native Web",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./components": "./src/components/index.ts",
    "./tokens": "./src/tokens/index.ts",
    "./enums": "./src/enums/index.ts",
    "./helpers": "./src/helpers/index.ts",
    "./context/ThemeContext": "./src/context/ThemeContext.tsx"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview:web": "vite preview",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs": "npx docsify-cli serve docs",
    "expo": "npm start --prefix preview",
    "expo:ios": "npm run ios --prefix preview",
    "expo:android": "npm run android --prefix preview",
    "expo:web": "npm run web --prefix preview"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-svg": ">=15.0.0",
    "react-native-web": ">=0.19.0"
  },
  "dependencies": {
    "lightweight-charts": "^5.1.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.2.3",
    "@storybook/components": "^8.6.14",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/react": "^10.2.3",
    "@storybook/react-vite": "^10.2.3",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.18",
    "buffer": "^6.0.3",
    "storybook": "^10.2.3",
    "typescript": "^5.4.0",
    "vite": "^5.0.8",
    "vitest": "^4.0.18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infamousvague/ghost.git"
  },
  "keywords": [
    "react",
    "react-native",
    "ui",
    "components",
    "design-system",
    "dark-theme"
  ],
  "author": "infamousvague",
  "license": "MIT"
}
